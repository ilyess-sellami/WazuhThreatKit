<group name="ransomware">
  <rule id="TS_R_010" level="10">
    <decoded_as>json</decoded_as>
    <field name="command">.*rm -rf /backup.*</field>
    <description>Possible ransomware activity: backup deletion detected</description>
    <mitre>
      <id>T1490</id>
      <tactic>Impact</tactic>
    </mitre>
  </rule>
</group>

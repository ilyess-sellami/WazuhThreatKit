<group name="ransomware">
  <rule id="TS_R_006" level="9">
    <decoded_as>json</decoded_as>
    <field name="command">.*rename .* \.locked$</field>
    <description>Possible ransomware activity: bulk file rename with .locked extension</description>
    <mitre>
      <id>T1486</id>
      <tactic>Impact</tactic>
    </mitre>
  </rule>
</group>

<group name="ransomware">
  <rule id="TS_R_001" level="10">
    <decoded_as>json</decoded_as>
    <field name="command">.*cipher.*</field>
    <description>Possible ransomware activity: cipher command executed for file encryption</description>
    <mitre>
      <id>T1486</id>
      <tactic>Impact</tactic>
    </mitre>
  </rule>
</group>

<group name="ransomware">
  <rule id="TS_R_003" level="10">
    <decoded_as>json</decoded_as>
    <field name="command">.*del /f /s /q.*</field>
    <description>Possible ransomware activity: mass deletion command detected</description>
    <mitre>
      <id>T1486</id>
      <tactic>Impact</tactic>
    </mitre>
  </rule>
</group>
